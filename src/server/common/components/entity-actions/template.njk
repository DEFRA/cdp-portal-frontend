{% from "govuk/components/button/macro.njk" import govukButton %}

<form action="{{ params.formAction }}" type="GET" data-js="auto-submit">
  <div class="app-entity-actions">

    <div class="app-entity-actions__primary">
      <div class="app-entity__action">
        {{ params.search }}
      </div>
    </div>

    <div class="app-entity-actions__filters">
      {% for filter in params.filters %}
        <div class="app-entity__action">
          {{ filter }}
        </div>
      {% endfor %}
    </div>
  </div>

  {{ govukButton({
    classes: "app-button govuk-!-margin-bottom-4 js-hidden",
    text: "Search",
    attributes: {
      "data-js": "app-entity-actions-submit-button"
    }
  }) }}
  </div>
</form>
