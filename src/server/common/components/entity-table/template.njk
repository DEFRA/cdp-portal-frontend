{% from "govuk/components/pagination/macro.njk" import govukPagination %}

{% from "tool-tip/macro.njk" import appToolTip %}
{% from "icons/sort-icon/macro.njk" import appSortIcon %}
{% from "entity/macro.njk" import appEntity with context %}

<article>
  <table class="app-entity-table" data-testid="app-entity-table">
    <thead class="app-entity-table__head{% if params.head.isInverse %} app-entity-table__head--inverse{% endif %}"
           data-testid="app-entity-table-head">
    <tr>
      {% for header in params.headers %}
        {% set headerClasses = [
          "app-entity-table__heading",
          header.classes if header.classes
        ] | join(" ") | trim %}

        <th id="{{ header.id }}" scope="col"
            class="{{ headerClasses }}"
            data-testid="app-entity-table-header-{{ loop.index }}"
            {% if header.width %}width="{{ header.width }}%"{% endif %}
          {% if header.text and header.isHidden %}aria-labelledby="{{ header.id }}"{% endif %}
          {# TODO write a better explanation of why we need to do this with z-index #}
          {# Tooltip use needs headers in a row to have their next sibling header have a reduced z-index #}
          {% if header.sorting %}style="z-index: {{ 100 + loop.revindex }};"{% endif %}
        >
          {% if header.text and not header.isHidden %}
            {% if header.sorting %}
              {{ header.text }}

              {% call appToolTip({ text: header.sorting.text }) %}
                {# TODO make from component the sets and flips input value #}
                {{ appSortIcon({ classes: "app-icon--tiny govuk-!-margin-left-1" }) }}
              {% endcall %}

            {% else %}
              {{ header.text }}
            {% endif %}
          {% elseif header.text and header.isHidden %}
            <span id="{{ header.id }}" class="govuk-visually-hidden">{{ header.text }}</span>
          {% endif %}
        </th>
      {% endfor %}
    </tr>
    </thead>
    <tbody>
    {% for row in params.rows %}
      <tr class="app-entity-table__row" data-testid="app-entity-table-row-{{ loop.index }}">
        {% for cell in row.cells %}

          {% set cellClasses = [
            "app-entity-table__cell",
            cell.classes if cell.classes,
            "app-entity-table__cell--slim" if cell.isSlim,
            "app-entity-table__cell--centered" if cell.isCentered
          ] | join(" ") | trim %}

          <td headers="{{ cell.headers }}"
              class="{{ cellClasses }}"
              data-label="{{ cell.headers | formatText }}">
            {% if cell.entity %}
              {{ appEntity(cell.entity | assign({}, {index: loop.index}, cell.entity)) }}
            {% elseif cell.html %}
              {{ cell.html | safe }}
            {% elseif cell.text %}
              {{ cell.text }}
            {% endif %}
          </td>
        {% endfor %}
      </tr>
    {% else %}
      <tr class="app-entity-table__row--no-results" data-testid="app-entity-table-no-results">
        <td class="app-entity-table__cell" colspan="{{ params.headers | length }}">
          {{ params.noResult | safe }}
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  {% if params.pagination.items.length > 1 %}
    <footer>
      {{ govukPagination(params.pagination | assign({}, { classes: "app-pagination" }, params.pagination)) }}
    </footer>
  {% endif %}
</article>
