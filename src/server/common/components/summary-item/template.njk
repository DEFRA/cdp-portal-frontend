{% set introContent = params.intro.html | safe if params.intro.html else params.intro.text %}
{% set content = params.content.html | safe if params.content.html else params.content.text %}

<section class="app-summary-item">
  <header class="app-summary-item__header">
    <h2 class="govuk-heading-m govuk-!-margin-bottom-1">{{ params.heading }}</h2>
    <span class="app-summary-item__icon">{{ params.icon }}</span>
  </header>
  <p class="app-summary-item__intro">
    {{ introContent }}
  </p>
  {{ caller() if caller else content }}
</section>
