{% from "entity/macro.njk" import appEntity %}

<div class="govuk-body">
  <h2 class="govuk-heading-m govuk-!-margin-bottom-2">{{ params.heading }}</h2>

  <dl class="app-data-list">

    {% for item in params.items %}
      {% set content = item.html | safe if item.html else item.text %}

      <dt class="app-data-list-heading">{{ item.heading }}</dt>
      <dd class="app-data-list-item">
        {{ appEntity(item.entity) if item.entity else content }}
      </dd>

    {% endfor %}
  </dl>
</div>
