{% from "loader/macro.njk" import appLoader %}

{# Implmentation of GovUk Button with JavaScript loader, if you don"t need a loader use the standard GovUk Button #}

<span class="app-button__container">
  <button class="govuk-button app-button"
    {% if params.name %}name="{{ params.name }}"{% endif %}
    {% if params.value %}value="{{ params.value }}"{% endif %}
    {% if params.loader.name %}data-loader="{{ params.loader.name }}"{% endif %}
          data-js="app-button"
          data-testid="app-button">
    {{ params.text }}
  </button>

  {% if params.loader.name %}
    {{ appLoader({
      name: params.loader.name,
      classes: "app-loader--with-adjacent-button" if params.loader.hasSiblingButton
    }) }}
  {% endif %}
</span>
