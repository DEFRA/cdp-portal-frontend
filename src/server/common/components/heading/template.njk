{% from "entity/macro.njk" import appEntity %}

<div class="govuk-grid-row app-heading" data-testid="app-heading">
  <div class="govuk-grid-column-one-half">
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-2"
        data-testid="app-heading-title">{{ params.title }}</h1>

    {% if params.caption %}
      <span class="govuk-caption-m"
            data-testid="app-heading-caption">{{ params.caption }}</span>
    {% endif %}

    {% if params.entities | length %}
      <div class="app-heading__entities">
        {% for entity in params.entities %}
          {{ appEntity(entity) }}
        {% endfor %}
      </div>
    {% endif %}
  </div>

  {% if params.actions | length %}
    <div class="govuk-grid-column-one-half app-heading__action">
      {% for action in params.actions %}
        <div class="app-heading__action-item">
          {{ action }}
        </div>
      {% endfor %}
    </div>
  {% endif %}
</div>
