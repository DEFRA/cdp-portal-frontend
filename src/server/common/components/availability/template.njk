{% from "loader/macro.njk" import appLoader %}
{% from "icons/tick-icon/macro.njk" import appTickIcon %}
{% from "icons/block-icon/macro.njk" import appBlockIcon %}

<div class="app-availability"
     data-js="{{ params.targetId }}"
     data-testid="app-availability"
     data-fetcher="{{ params.dataFetcher }}"
>
  {{ appTickIcon({ classes: "app-icon--small", js: "is-available", description: "Name is available" }) }}
  {{ appBlockIcon({ classes: "app-icon--small", js: "is-not-available", description: "Name is unavailable" }) }}
  {{ appLoader({ name: "loader" }) }}
</div>
