{% extends "layouts/page.njk" %}

{% from "documentation/macro.njk" import appDocumentation %}
{% from "icons/homepage-icon/macro.njk" import appHomepageIcon %}

{% set invertServiceNav=true %}

{% set secondaryHtml %}
  Any comments, questions or suggestions? Contact the Platform team -
  <a class="app-link app-link--inverse"
     href="{{ supportChannel }}"
     target="_blank"
     rel="noopener noreferrer">#cdp-support</a>
{% endset %}

{% set asideHtml %}
  <div class="app-display-desktop-big">
    {{ appHomepageIcon() }}
  </div>
{% endset %}

{% block content %}
  {{ appPageHeading({
    text: "CDP Platform Updates",
    intro: "What's new on the platform?"
  }) }}

  <div class="govuk-!-margin-top-4">
    {{ appDocumentation({
        nav: nav,
        content: content,
        toc: toc,
        documentationPath: documentationPath
      }) }}
  </div>

{% endblock %}
