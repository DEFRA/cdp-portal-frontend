{% extends "layouts/page.njk" %}

{% from "blog/macro.njk" import appBlog %}
{% from "icons/hero-icon/macro.njk" import appHeroIcon %}

{% set invertServiceNav=true %}

{% set secondaryHtml %}
  Comments, questions, suggestions and feature requests? Contact the Platform team -
  <a class="app-link app-link--inverse"
     href="{{ supportChannel }}"
     target="_blank"
     rel="noopener noreferrer">#cdp-support</a>
{% endset %}

{% set asideHtml %}
  {{ appHeroIcon() }}
{% endset %}

{% block content %}
  {{ appHero({
    heading: "Build your Defra applications on the Core Delivery Platform",
    lead: {
      html: "Enabling teams to create, deploy, run and monitor applications at DEFRA."
    },
    secondary: {
      html: secondaryHtml
    },
    aside: {
      html: asideHtml
    }
  }) }}

  {{ appBlog({
    nav: nav,
    content: content,
    toc: toc,
    isInverse: true
  }) }}

{% endblock %}

{% block bodyEnd %}
  {{ super() }}
  <script type="module" src="{{ getAssetPath("mermaid.js") }}"></script>
{% endblock %}
