{% extends "layouts/page.njk" %}

{% block content %}

  {{ appPageHeading({
    caption: "Edit",
    text: team.name
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-one-third-from-desktop">

      <h2 class="govuk-heading-m">Edit Team Details</h2>

      <form action="/teams/{{ team.teamId }}/edit"
            method="post"
            data-js="app-form-errors">
        <input type="hidden" name="csrfToken" value="{{ csrfToken }}"/>

        {% call govukFieldset() %}

          {{ govukInput({
            label: {
              text: "Team name",
              classes: "app-label"
            },
            id: "name",
            name: "name",
            classes: "app-input app-input--wide",
            formGroup: {
              classes: "app-form-group"
            },
            attributes: {
              "readonly": "readonly",
              "data-1p-ignore": ""
            },
            value: team.name or formValues.name
          }) }}

          {{ govukTextarea({
            label: {
              text: "Description (optional)",
              classes: "app-label"
            },
            id: "description",
            name: "description",
            classes: "app-textarea app-textarea--wide",
            formGroup: {
              classes: "app-form-group app-form-group-js"
            },
            attributes: {
              "data-1p-ignore": ""
            },
            value: team.description or formValues.description,
            errorMessage: {
              attributes: {
                "data-js": "app-error"
              },
              text: formErrors.description.message,
              classes: "govuk-!-margin-bottom-1 app-error-message"
            } if formErrors.description.message
          }) }}

        {% endcall %}

        <div class="govuk-body govuk-button-group">
          {{ govukButton({
            classes: "app-button",
            text: "Save"
          }) }}

          <a class="app-link" href="/teams/{{ team.teamId }}">Cancel</a>
        </div>
      </form>

    </div>
  </div>

{% endblock %}
