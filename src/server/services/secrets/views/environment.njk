{% extends "layouts/tabbed-page.njk" %}

{% from "icons/pending-icon/macro.njk" import appPendingIcon %}
{% from "icons/tick-icon/macro.njk" import appTickIcon %}
{% from "info/macro.njk" import appInfo %}
{% from "loader/macro.njk" import appLoader %}
{% from "tag/macro.njk" import appTag %}
{% from "tool-tip/macro.njk" import appToolTip %}

{% set setupSecretsHtml %}
  To set up secrets, contact the Platform team via Slack
  <a class="app-link-underline app-link--text-colour" href="{{ supportChannel }}" target="_blank"
     rel="noopener noreferrer">#cdp-support</a>
{% endset %}

{% set serviceSecretsTableRows = [] %}
{% for secret in serviceSecrets.keys %}
  {% set actionHtml %}
    {% if secret.status == "available" %}
      <a href="{{ routeLookup('services/{serviceId}/secrets/{environment}/update', {
        query: { secretKey: secret.key },
        params: { serviceId: service.serviceName, environment: environment }
      }) }}" class="app-link">Update</a>
    {% endif %}
    {% if secret.status == "pending" %}
      {{ appLoader({ classes: "app-loader--is-loading" }) }}
    {% endif %}
  {% endset %}

  {% set iconHtml %}
    {% if secret.status == "pending" %}
      {% call appToolTip({
        text: "Pending",
        classes: "app-tool-tip--small"
      }) %}
        {{ appPendingIcon({ classes: "app-icon-tiny" }) }}
      {% endcall %}
      {% elif secret.status == "available" %}
      {% call appToolTip({
        text: "Available",
        classes: "app-tool-tip--small"
      }) %}
        {{ appTickIcon({ classes: "app-icon-tiny" }) }}
      {% endcall %}
    {% endif %}
  {% endset %}

  {{ serviceSecretsTableRows.push([
    { html: appTag({ text: secret.key, classes: "govuk-tag--green" }) },
    { html: iconHtml, classes: "app-!-width-one-tenth" },
    { html: actionHtml, classes: "app-!-width-one-tenth app-!-align-vertical-middle" }
  ]) }}
{% endfor %}

{% set platformSecretsTableRows = [] %}

{% set platformIconHtml %}
  {% call appToolTip({
    text: "Available",
    classes: "app-tool-tip--small"
  }) %}
    {{ appTickIcon({ classes: "app-icon-tiny" }) }}
  {% endcall %}
{% endset %}

{% for platformSecret in platformSecrets %}
  {{ platformSecretsTableRows.push([
    { html: appTag({ text: platformSecret.key, classes: "govuk-tag--grey"}), classes: "govuk-!-width-one-quarter" },
    { text: platformSecret.description, classes: "govuk-!-width-one-half" },
    { html: platformIconHtml, classes: "app-!-width-one-fifth" }
  ]) }}
{% endfor %}

{% block beforeTabContent %}

  {{ appHeading({
    title: heading,
    caption: "Information about the " + heading + " microservice.",
    entities: headingEntities
  }) }}

{% endblock %}

{% block tabContent %}
  {% call appSplitPane() %}
    <div class="govuk-grid-row govuk-!-margin-top-2 govuk-!-margin-left-2">
      <section class="app-grid-column-one-third-from-desktop-big">
        <h2 class="govuk-heading-l govuk-!-margin-bottom-2">{{ environment | title }} secrets</h2>
        <div class="app-section-wide">
          {% if isSecretsSetup %}
            <p class="govuk-!-margin-bottom-4">
              Manage secrets for {{ service.serviceName }} in {{ environment | title }}.
            </p>

            {% if shouldPoll %}
              <div data-js="app-poll"
              data-poll-url="/services/{{ service.serviceName }}/secrets/{{ environment }}"
              data-poll-interval="3000"
              data-poll-limit="45">
            {% endif %}

            {% block xhrContent %}
              <article data-xhr="secrets-{{ service.serviceName }}-{{ environment }}"
                       data-xhr-success-message="{{ successMessage }}"
                       data-xhr-error-message="{{ exceptionMessage }}"
                       data-xhr-stop="{{ not shouldPoll }}">
                <div class="app-row">
                  <div class="app-row__item-flex-two">
                    <h2 class="govuk-heading-m govuk-!-margin-bottom-2">Service secrets
                      {% if shouldPoll %}
                        {{ appLoader({ classes: "app-loader--is-loading" }) }}
                      {% endif %}
                    </h2>
                  </div>
                  {% if serviceSecrets.lastChangedDate %}
                    <div class="app-!-layout-right-aligned app-row__item-flex-four app-row__item-align-self--end">
                      <p class="govuk-!-margin-bottom-2">
                        <strong class="govuk-!-margin-right-1">Last updated:</strong>
                        {{ appTime({
                          datetime: serviceSecrets.lastChangedDate
                        }) }}
                      </p>
                    </div>
                  {% endif %}
                </div>

                <p>
                  Secret keys available to your service.
                </p>

                {{ appInfo({
                  classes: "govuk-!-margin-bottom-4",
                  html: "To apply any secret changes to your service re-deploy it."
                }) }}

                {% call appPanel({ classes: "govuk-!-margin-bottom-6" }) %}
                  {% if serviceSecrets.keys | length %}
                    {{ govukTable({
                      classes: "app-table govuk-!-margin-bottom-2",
                      head: [
                        { text: "Key" },
                        { text: "Status", classes: "app-!-width-one-tenth" },
                        { text: "Actions", classes: "app-!-width-one-tenth" }
                      ],
                      rows: serviceSecretsTableRows
                    }) }}

                  {% else %}
                    <p class="govuk-!-margin-top-2 govuk-!-margin-bottom-2">
                      No service secrets currently set
                    </p>
                  {% endif %}
                {% endcall %}
              </article>
            {% endblock %}

            {% if shouldPoll %}</div>{% endif %}

            <h2 class="govuk-heading-m govuk-!-margin-bottom-2">Platform secrets</h2>
            <p>
              Platform level secret keys available to your service.
            </p>

            {% if platformSecrets | length %}
              {{ appInfo({
                classes: "govuk-!-margin-bottom-4",
                text: "These secrets are generated and set by the platform. They are fixed and cannot be changed."
              }) }}
            {% endif %}

            {% call appPanel({ classes: "govuk-!-margin-bottom-4" }) %}
              {% if platformSecrets | length %}
                {{ govukTable({
                  classes: "govuk-!-margin-bottom-2",
                  head: [
                    { text: "Key", classes: "govuk-!-width-one-quarter" },
                    { text: "Description", classes: "govuk-!-width-one-half" },
                    { text: "Status", classes: "app-!-width-one-fifth" }
                  ],
                  rows: platformSecretsTableRows
                }) }}

              {% else %}
                <p class="govuk-!-margin-top-4">
                  No platform secrets currently set
                </p>
              {% endif %}
            {% endcall %}

          {% else %}
            <p>
              Secrets not set up for this environment
            </p>
            {{ appInfo({ html: setupSecretsHtml }) }}

          {% endif %}
        </div>
      </section>

      <section class="app-grid-column-one-half-from-desktop-big">
        {% if isSecretsSetup %}
          {% include "services/secrets/partials/create-form.njk" %}
        {% endif %}
      </section>
    </div>
  {% endcall %}
{% endblock %}
