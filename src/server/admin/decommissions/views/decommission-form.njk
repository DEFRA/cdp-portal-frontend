{% extends "layouts/page.njk" %}

{% block content %}
  {% call appSplitPane({ isWide: true }) %}

    {{ appPageHeading({
      caption: "Start",
      text: "Decommission",
      intro: "Decommission a Microservice, Test-Suite or Repository"
    }) }}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds-from-desktop-wide">

        <form action="{{ routeLookup('post:admin/decommissions/start') }}" method="post" data-js="app-form-errors">
          <input type="hidden" name="csrfToken" value="{{ csrfToken }}" />

          {% call govukFieldset() %}

            {{ appAutocomplete({
              id: "repository-name",
              name: "repositoryName",
              label: {
                text: "Name",
                classes: "app-label"
              },
              hint: {
                text: 'Find the Microservice, Test-Suite or Repository to decommission'
              },
              formGroup: {
                classes: "app-form-group app-form-group-js"
              },
              value: formValues.repositoryName,
              suggestions: repositoriesOptions,
              errorMessage: errorMessageHelper(formErrors.repositoryName.message)
            }) }}

          {% endcall %}

          <div class="govuk-button-group">
            {{ govukButton({
              classes: "app-button app-button--destructive",
              text: "Decommission"
            }) }}
          </div>

        </form>
      </div>
    </div>

  {% endcall %}
{% endblock %}
