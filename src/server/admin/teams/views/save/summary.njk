{% extends "layouts/page.njk" %}

{% from "split-pane/macro.njk" import appSplitPane with context %}

{% block content %}
  {% call appSplitPane() %}

    {{ appStepNavigation(stepNavigation) }}

    <div class="govuk-main-wrapper app-main-wrapper">

      {{ appHeading({
        title: heading,
        caption: headingCaption
      }) }}

      <div class="govuk-grid-row">
        <div class="app-grid-column-two-thirds-at-desktop-wide">

          {% set actionSuffix = "edit" if isEdit else "create" %}

          <form action="/admin/teams/{{ actionSuffix }}" method="post">
            <input type="hidden" name="csrfToken" value="{{ csrfToken }}"/>

            {{ govukSummaryList({
              classes: "govuk-!-margin-bottom-9",
              rows: teamRows
            }) }}

            {{ govukButton({
              classes: "app-button",
              text: formButtonText
            }) }}

          </form>
        </div>
      </div>

    </div>

  {% endcall %}
{% endblock %}

