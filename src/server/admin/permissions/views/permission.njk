{% extends "layouts/page.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{# TODO - once data migrated this check for scope.kind can be reduced to just check for team in scope.kind #}
{% set addPermissionText %}
  {% if scope.kind and scope.kind.includes("user") and scope.kind.includes("team") %}
    Add permission to a user or a team
  {% elseif scope.kind and scope.kind.includes("user") %}
    Add permission to a user
  {% elseif scope.kind and scope.kind.includes("team") %}
    Add permission to a team
  {% endif %}
{% endset %}

{% block content %}
  {% call appSplitPane() %}

    {{ appPageHeading({
      caption: "Permission",
      text: scope.value | formatText
    }) }}

    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-half-from-desktop">

        <ul class="govuk-list govuk-!-margin-bottom-6">
          <li>
            <a href="/admin/permissions/{{ scope.scopeId }}/add" class="app-link app-link--underline">
              {{ addPermissionText }}
            </a>
          </li>
          <li>
            <a href="/admin/permissions/{{ scope.scopeId }}/confirm-delete" class="app-link app-link--underline">
              Delete permission
            </a>
          </li>
        </ul>

        <h2 class="govuk-heading-m govuk-!-margin-bottom-2">Permission details</h2>

        {{ govukSummaryList(summaryList) }}

        {# TODO - once data migrated this check for scope.kind can be reduced to just check for user in scope.kind #}
        {% if scope.kind and "user" in scope.kind %}
          <h2 class="govuk-heading-m">
            {{ "User" | pluralise(scope.users | length) }} with permission
          </h2>

          {% if scope.users | length %}
            {{ govukTaskList(usersTaskList) }}
          {% else %}
            <p>
              This permission has not been added to any users. <a href="/admin/permissions/{{ scope.scopeId }}/add"
                                                                  class="app-link app-link--underline">
                Add permission
              </a>
            </p>
          {% endif %}
        {% endif %}

        {# TODO - once data migrated this check for scope.kind can be reduced to just check for team in scope.kind #}
        {% if scope.kind and "team" in scope.kind %}
          <h2 class="govuk-heading-m">
            {{ "Team" | pluralise(scope.teams | length) }} with permission
          </h2>

          {% if scope.teams | length %}
            {{ govukTaskList(teamsTaskList) }}
          {% else %}
            <p>
              This permission has not been added to any teams. <a href="/admin/permissions/{{ scope.scopeId }}/add"
                                                                  class="app-link app-link--underline">
                Add permission
              </a>
            </p>
          {% endif %}
        {% endif %}

      </div>
    </div>

  {% endcall %}
{% endblock %}
