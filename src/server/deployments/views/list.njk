{% extends "layouts/tabbed-page.njk" %}

{% from "search/macro.njk" import appSearch %}

{% block actions %}
  {{ appSearch({
    label: "Search deployments",
    id: "search",
    name: "search",
    searchItems: searchItems
  }) }}
{% endblock %}

{% block tabContent %}

  {{ appEntityList({
    headings: [
      { text: "Deployment", size: "large" },
      { text: "Version", size: "tiny" },
      { text: "Status", size: "small" },
      { text: "By", size: "small" },
      { text: "Date", size: "large" }
    ],
    entityRows: entityRows,
    noResult: "Currently there are no micro-service deployments in " + environment | startCase
  }) }}

{% endblock %}
