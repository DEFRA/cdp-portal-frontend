{% extends "layouts/step-navigation-page.njk" %}

{% block content %}

  {{ appHeading({
    title: heading,
    caption: headingCaption
  }) }}

  <div class="govuk-grid-row">
    <div class="app-grid-column-two-thirds-at-desktop-wide">
      <div class="govuk-body">

        {{ appInfo({
          text: "All containers have logging and metrics sidecars that consume 256 (.25 vCPU) of virtual CPU and .25 GB
          (256 MB) of memory. Adjust your containers cpu and memory to allow for this resource allocation."
        }) }}

        <form action="{{ appPathPrefix }}/deploy-service/deploy" method="post">

          {{ govukSummaryList({
            classes: 'govuk-!-margin-bottom-9',
            rows: deploymentRows
          }) }}

          {{ govukButton({
            classes: "app-button",
            text: formButtonText
          }) }}

        </form>
      </div>
    </div>
  </div>

{% endblock %}
