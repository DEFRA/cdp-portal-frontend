{% extends "layouts/step-navigation-page.njk" %}

{% block content %}

  {{ appHeading({
    title: heading,
    caption: headingCaption
  }) }}

  <div class="govuk-grid-row">
    <div class="app-grid-column-two-thirds-at-desktop-wide">
      <div class="govuk-body">

        {{ appInfo({
          text: "All deployments require some resources for platform processes. Adjust your CPU and memory to allow for
          this resource allocation."
        }) }}

        <form action="{{ appPathPrefix }}/deploy-service/deploy" method="post">

          {{ govukSummaryList({
            classes: "govuk-!-margin-bottom-9",
            rows: deploymentRows
          }) }}

          {{ govukButton({
            classes: "app-button",
            text: formButtonText
          }) }}

        </form>
      </div>
    </div>
  </div>

{% endblock %}
