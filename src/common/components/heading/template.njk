<div class="govuk-grid-row" data-test-id="app-heading">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-2" data-test-id="app-heading-title">{{ params.text }}</h1>

    {% if params.caption %}
      <span class="govuk-caption-m govuk-!-margin-bottom-4"
            data-test-id="app-heading-caption">{{ params.caption }}</span>
    {% endif %}
  </div>
</div>
