{% from "entity/macro.njk" import appEntity %}

<ul class="app-entity-list" data-test-id="app-entity-list">
  <li class="app-entity-list__row app-entity-list__row--header">
    {% for heading in params.headings %}
      <div class="app-entity-list__item app-entity-list__item--{{ heading.size }}"
           data-test-id="app-entity-list-item-{{ loop.index }}">
        {{ heading.text }}
      </div>
    {% endfor %}
  </li>

  {% for item in params.items %}
    <li class="app-entity-list__row" data-test-id="app-entity-list-row-{{ loop.index }}">
      {% for entity in item %}
        {{ appEntity(entity | assign({}, {index: loop.index}, entity)) }}
      {% endfor %}
    </li>
  {% else %}
    <li class="app-entity-list__row" data-test-id="app-entity-list-no-results">{{ params.noResult }}</li>
  {% endfor %}

</ul>
