{% extends "govuk/template.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/select/macro.njk" import govukSelect %}

{% from "breadcrumbs/macro.njk" import appBreadcrumbs %}
{% from "banner/macro.njk" import appBanner %}
{% from "button/macro.njk" import appButton %}
{% from "header/macro.njk" import appHeader %}
{% from "heading/macro.njk" import appHeading %}
{% from "footer/macro.njk" import appFooter %}
{% from "page-body/macro.njk" import appPageBody %}

{% set mainClasses = "app-main-wrapper" %}

{% block head %}
  <link href="{{ getAssetPath('application.css') }}" rel="stylesheet">
  <meta name="version" content="{{ version }}">
{% endblock %}

{% block header %}
  {{ appHeader({
    homepageUrl: "https://www.gov.uk/",
    serviceName: serviceName,
    serviceUrl: appPathPrefix
  }) }}
  {% include "partials/navigation.njk" %}
{% endblock %}

{% block pageTitle %}
  {{ pageTitle }} | {{ serviceName }}
{% endblock %}

{% block beforeContent %}
  {% if notifications.length %}
    {% for notification in notifications %}
      {{ appBanner({
        text: notification.text,
        type: notification.type
      }) }}
    {% endfor %}
  {% endif %}

  {% if breadcrumbs.length > 1 %}
    {{ appBreadcrumbs({
      items: breadcrumbs
    }) }}
  {% endif %}
{% endblock %}

{% block content %}{% endblock %}

{% block footer %}
  {{ appFooter() }}
{% endblock %}

{% block bodyEnd %}
  <script src="{{ getAssetPath('application.js') }}"></script>
{% endblock %}
