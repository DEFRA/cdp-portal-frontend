{% extends "govuk/template.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}

{% from "breadcrumbs/macro.njk" import appBreadcrumbs %}
{% from "header/macro.njk" import appHeader %}
{% from "heading/macro.njk" import appHeading %}
{% from "footer/macro.njk" import appFooter %}

{% set mainClasses = "app-main-wrapper" %}

{% block head %}
  <link href="{{ getAssetPath('application.css') }}" rel="stylesheet">
  <meta name="version" content="{{ version }}">
{% endblock %}

{% block header %}
  {{ appHeader({
    homepageUrl: "https://www.gov.uk/",
    serviceName: serviceName,
    serviceUrl: serviceUrl
  }) }}
  {% include "partials/navigation.njk" %}
{% endblock %}

{% block pageTitle %}
  {{ pageTitle }} | {{ serviceName }}
{% endblock %}

{% block beforeContent %}
  {% if breadcrumbs.length > 1 %}
    {{ appBreadcrumbs({
      items: breadcrumbs
    }) }}
  {% endif %}
{% endblock %}

{% block content %}{% endblock %}

{% block footer %}
  {{ appFooter() }}
{% endblock %}

{% block bodyEnd %}
  <script src="{{ getAssetPath('application.js') }}"></script>
{% endblock %}
