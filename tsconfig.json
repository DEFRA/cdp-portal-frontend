{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "allowJs": true,
    "checkJs": false,
    "module": "NodeNext",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "lib": ["DOM", "ES2020"],
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": [
    "src",
    ".eslintrc.cjs",
    "types/**/*.ts",
    "**/*.cjs",
    "**/*.js",
    "**/*.json",
    ".jest"
  ],
  "exclude": [
    "node_modules",
    "package-lock.json",
    "coverage",
    ".server",
    ".public"
  ]
}
